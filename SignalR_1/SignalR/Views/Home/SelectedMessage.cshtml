@model SignalR.Models.ViewModel
@{
    ViewData["Title"] = "Home Page";
    //var userName = User.Identity.Name;
}

@if (User.Identity.IsAuthenticated)
{
    <h1>@ViewBag.CurrentUserName</h1>
}
<div class="jumbotron bg-light">
    <h1 class="text-center text-primary">
        <i class="fab fa-facebook-messager"></i> &nbsp; Public Talk
    </h1>

    <div class="row">
        <div class="col-md-12" id="chat">
            @if (Model != null)
            {
                @foreach (var message in Model.Messages.OrderBy(m => m.When))
                {
                    string containerClass, timePosisiton, textAlign, contcolor, offset;
                    if (Model.userName == message.UserName)
                    {
                        containerClass = "container darker";
                        timePosisiton = "time-right text-right";
                        textAlign = "text-right text-while";
                        contcolor = "bg-primary";
                        offset = "col-md-6 offset-md-6";
                    }
                    else
                    {
                        containerClass = "container";
                        timePosisiton = "time-left";
                        textAlign = "text-left";
                        contcolor = "bg-light";
                        offset = "";
                    }
                    <div class="row">
                        <div class="@offset">
                            <div class="@containerClass @contcolor">
                                <p class="sender @textAlign">@message.UserName</p>
                                <p class="@textAlign">@message.Text</p>
                                <p class="@timePosisiton">@message.When.ToString()</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-md-12">
            <form asp-action="Create"
                  data-ajax-begin="clearInputField" data-ajax-complete=""
                  data-ajax-failure="alert('fail')" data-ajax-success="sendMessage"
                  data-ajax="true" data-ajax-method="POST">
                <input type="hidden" name="SenderId" value="@Model.SenderId" />
                <input type="hidden" name="ReceverId" value="@Model.RecevireId" />
                <input type="hidden" name="UserName" value="@Model.userName"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input class="form-control" id="messageText" name="Text" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" id="submitButton" value="Send" />
                </div>
            </form>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <script>
        const userName = "@ViewBag.CurrentUserName"
    </script>
}


@section scripts{
    <script src="~/signalr/signalr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/js/signalrReqHandler.js"></script>
}